@using GhostPhotographerBlog.UI.Models
@model CommentViewModel




<div class="comment col-xs-12 blockquote" id="comment-@Model.Id">
 
  <div class="col-xs-10"><h4>@Model.Comment</h4></div>
  <div class="col-xs-2">
    @if (ViewBag.Role == "Admin" || ViewBag.Role == "Writer")
    {
        <button onclick="deleteComment(@Model.Id)" class="btn btn-danger">Delete</button>
    }
  </div>
  <div class="row"></div>
  <hr />
  <div class="col-xs-12">
    Posted By: <b>@Model.DisplayName</b> on: @Model.CommentDate.ToString("M/dd/yyyy | hh:mm")
  </div>
</div>


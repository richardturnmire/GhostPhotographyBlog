@using GhostPhotographerBlog.UI.Models
@model BlogPostViewModel

@{
    ViewBag.Title = "BlogPost";
}



@Html.HiddenFor(r => r.Id)
<div></div>

<ul class="list-group" id="errorMessages"></ul>
<div class="col-xs-12">
  <div class="titles">
    <img src="~/Images/@Model.PostImage" class="blog-image titles" />
  </div>
  <div style="color: red; border: 0 0 2px 0 solid white;">
    <div class="col-xs-12" style="font-family: Eater, cursive;">
      <h1>@Model.Title</h1>
      <hr />
    </div>

    <div class="col-xs-5">
      @*@Html.LabelFor(m => m.DisplayAuthor, htmlAttributes: new { @class = "" })*@

      <h4>Written By: <b>@Model.DisplayAuthor</b></h4> 
    </div>

    <div class="col-xs-7">
      <h4>@Model.DateCreated.ToString("M/dd/yyyy | hh:mm")</h4>
    </div>
    <hr />
  </div>
  <hr />

  <div id="blog-content" class="col-xs-12" style="padding: 3%;">
      @Html.Raw(@Model.PostContent)
  </div>

</div>
@if (ViewBag.Role == "Admin" || ViewBag.Role == "Writer" || ViewBag.Role == "Guest")
{
<div class="col-xs-12">
  <div class="col-xs-12" >
    @Html.TextAreaFor(r => r.NewComment, htmlAttributes: new { @class = "form-control", placeholder = "Insert Comment Here", style = "width: 100%; height: 50px" })
  </div>
  <div class="col-xs-3 col-xs-offset-1" style="padding-top: 2%">
    <button onclick="postComment('@ViewBag.UserId')" class="btn btn-primary" id="blog-comment">Comment</button>
  </div>
</div>
}

<div class="col-xs-12 col-sm-12">
  <div id="comments"></div>
</div>
<div class="col-xs-12 col-sm-12"></div>
<div class="row"></div>





@section Scripts {
  <script src="~/Scripts/blogpost.js"></script>
  }